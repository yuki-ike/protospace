.container.proto-page
  %header.row.user-nav
    .col-md-6
      .media
        .media-left
          / %a{href: "#"}
          /   %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "", style: "width: 64px; height: 64px;"}/
        .media-body
          %h4#top-aligned-media.media-heading
            = @prototype.title
          .proto-user
            = link_to " by #{@prototype.user.username} ", user_path(@prototype.user_id)
            %span.degree #{@prototype.user.profile} #{@prototype.user.works}

    .col-md-6.text-right
      %button.btn.btn-default
        = image_tag("")
        Like
        %span.num 20
  .row
    .col-md-9
      = image_tag("#{@prototype.content_main}", class: 'img-responsive')
    .col-md-3
      %ul.proto-sub-list.list-group
        = render :partial => "sub", :collection => @prototype.contents.sub, :as => "sub"
  .row.proto-description
    .col-md-3
      %h4 Catch Copy
      %p #{@prototype.catch_copy}
    .col-md-6
      %h4 Concept
      %p #{@prototype.concept}
    .col-md-3
      %h4 Tag List
      %ul.proto-tag-list.list-inline
        %li
          %a{href: "#", class: "btn btn-default"} iPad
        %li
          %a{href: "#", class: "btn btn-default"} wireframe
  .row.proto-comments
    %h4.col-md-12
      Comments
      %span.num (10)
    .col-md-8
      .media
        .media-left
          / %a{href: "#"}
          /   %img.media-object{alt: "64x64", "data-holder-rendered": "true", "data-src": "holder.js/64x64", src: "", style: "width: 64px; height: 64px;"}/
        .media-body
          %h4#top-aligned-media.media-heading
            Top aligned media
            %a.anchorjs-link{href: "#top-aligned-media"}
              %span.anchorjs-icon
          %p

      %form.form-inline{role: "form"}
        %h4 Write a comment
        .row
          .form-group.col-md-10
            %textarea.form-control{placeholder: "Your comments", rows: "3"}
          .form-group.col-md-2
            %button.btn.btn-primary Comment

