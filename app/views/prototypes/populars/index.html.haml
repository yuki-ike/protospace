.jumbotron
  .container.text-center
    = image_tag("header_logo.png", alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "73px")

.filter-nav
  .container
    .row
      %ul.nav.nav-pills.col-lg-11
        %li.active{role: "presentation"}
          %a{href: "/populars"} Popular PROTO
        %li{role: "presentation"}
          %a{href: "/prototypes"} Newest PROTO
      %button{type: "button", class: "btn btn-default col-lg-1"} View Tags

.container.proto-list
  .row
    - @prototypes.each do |prototype|
      .col-sm-4.col-md-3.proto-content
        - if user_signed_in? && current_user.id == prototype.user_id
          .dropdown.drop_menu_location.open
            %button.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "data-toggle" => "dropdown", "id" => "dropdownMenu", "type" => "button"}
              Action
            %ul.dropdown-menu{"aria-labelledby" => "dropdownMenu1"}
              %li
                = link_to 'Delete', "/prototypes/#{prototype.id}", method: :delete
              %li
                = link_to 'Edit', "/prototypes/#{prototype.id}/edit"
        .thumbnail
          = link_to image_tag("#{prototype.content_main}"), "prototypes/#{prototype.id}"
          .caption
            %h3
              = prototype.title
            .proto-meta
              .proto-user
                = link_to " by #{prototype.user.username} ", user_path(prototype.user_id)
              .proto-posted
                = prototype.created_at.strftime('%b %d')
