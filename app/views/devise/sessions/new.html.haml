.form-signin
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    = devise_error_messages!
    %h2.form-signin-heading Please sign in
    %label.sr-only{for: "inputEmail"} Email address
    = f.email_field :email, autofocus: true, placeholder: "Email address", type: "email"
    %label.sr-only{for: "inputPassword"} Password
    = f.password_field :password, placeholder: "Password", autocomplete: 'off', type: "password"
    .checkbox
      %label
        %input{type: "checkbox", value: "remember-me"}/
        Remember me
    = f.submit "Sign in",class: "btn btn-lg btn-primary btn-block"
  .text-center
    %p
      Not a member?
      = link_to 'Sign up now', '/users/sign_up'
