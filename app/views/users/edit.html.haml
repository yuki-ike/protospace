.container.user-new
  = form_for current_user do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Edit Profile
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :username, placeholder: "Username"
            .user-image.col-md-2
              %button.btn.btn-primary Change image
              = f.text_field :image
          .user-emailtype
          = f.email_field :email, placeholder: "E-Mail", autofocus: true
          .user-password
          = f.password_field :password, :placeholder => "Password", autocomplete: 'off'
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :member_of, placeholder: "Member"
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_field :profile, cols: "30", rows: "4", placeholder: "Profile"
        %h4 Works
        .user-name_image.row
          .user-name.col-md-12
            = f.text_field :works, cols: "30", rows: "4", placeholder: "Works"
      .row.text-center.user-btn
        = f.submit "submit",class: "btn.btn-lg.btn-primary.btn-block"
